{
  "manifest_version": 3,
  "name": "Google Docs Cleaner",
  "version": "1.0",
  "description": "Google ドキュメントの不要な空白行を削除します",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "空白行を削除"
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
